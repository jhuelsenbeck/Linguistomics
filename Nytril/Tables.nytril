    Enclosure(62, 18, 25, 24, new(245, 252, 220, 50%)); // Sibilants
    Enclosure(11, 53, 21, 18, new(240, 255, 247));      // Vowels
    Enclosure(33, 53, 61, 18, new(240, 255, 247, 50%)) {
