class FriulianClass: LanguageClass {
  Constructor {
    super.Constructor("Friulian");
    MapImage       = LoadImage("Friulian.png");
    MapAttribution = "By El Bux Del Cu - Own work, CC BY-SA 4.0, https://commons.wikimedia.org/w/index.php?curid=100544430";
  }

  override Description = Block {
    BodyPar {
      "Friulian (/friˈuːliən/ free-OO-lee-ən) or Friulan (natively About this soundfurlan or marilenghe; ";
      "Italian: friulano; German: Furlanisch; Slovene: furlanščina) is a Romance language belonging to the Rhaeto-Romance family, spoken in the Friuli region of northeastern Italy. ";
      "Friulian has around 600,000 speakers, the vast majority of whom also speak Italian. ";
    }
  };

  override Details = Block {
    BodyPar {
      "It is sometimes called Eastern Ladin since it shares the same roots as Ladin, but over the centuries, it has diverged under the influence of surrounding languages, including German, Italian, Venetian, and Slovene. ";
      "Documents in Friulian are attested from the 11th century and poetry and literature date as far back as 1300. ";
      "By the 20th century, there was a revival of interest in the language.";
    }
  };
}
