class BrazilianPortuguesClass: LanguageClass {
  Constructor {
    super.Constructor("Brazilian Portuguese");
    MapImage       = LoadImage("Brazilian Portuguese.png");
    MapAttribution = "Addicted04";
  }

  override Description = Block {
    BodyPar {
      "The set of dialects of the Portuguese language native to Brazil and the most influential form of Portuguese worldwide. ";
      "It is spoken by almost all of the 200 million inhabitants of Brazil and spoken widely across the Brazilian diaspora, today consisting of about two million Brazilians who have emigrated to other countries. ";
      "With a population of over 205 million, Brazil is by far the world's largest Portuguese-speaking nation and the only one in the Americas."
    }
  };
}
