class AlignedCountClass: CountBaseClass {
  ListClass<AlignActionClass>   ActionList;
  MatrixClass<AlignActionClass> ActionMatrix;
  ResultsClass                  Results;
  var                           Factor;
  AlignActionClass[]            SortedActions;

  Constructor(ResultsClass results, RateMatrixClass rates) {
    super.Constructor(results.Data);
    Results = results;

    var ordered = results.Data.UniqueSegments;
    var length  = Segments.Length;

    System.Assert(length == rates.Values.Rows);
    System.Assert(length == rates.Values.Cols);
    System.Assert(length == ordered.Length);


    ActionMatrix = new(length, length, null);
    ActionList   = new(length * length);
    var values   = rates.Values;

    for (var i = 0; i < length; ++i) {
      var jmax = rates.Symmetric ? i : length;

      for (var j = 0; j < jmax; ++j) {
        var rate = values.GetValue(i, j);
        if (rates.Symmetric) {
          var a = new AlignActionClass(results, ordered[i], ordered[j], rate, rate, rates.Symmetric);
          ActionList.Add(a);
          ActionMatrix.SetValue(i, j, a);
        }
        else {
          var reverse = values.GetValue(j, i);
          var a       = new AlignActionClass(results, ordered[i], ordered[j], rate, reverse, rates.Symmetric);
          ActionList.Add(a);
          ActionMatrix.SetValue(i, j, a);
        }
      }
    }

    var f = 1.0 / rates.MaxValue;
    foreach (var a in ActionList) {
      a.Percent  = a.Rate * f;
      a.RPercent = a.Reverse * f;
    }

    Factor        = f;
    SortedActions = ActionList.Sort(true);
  }

  ShowLegend(AlignActionClass[] actions) = {
    // Show only partitions that are present in the chart
    var pmax = Results.Rule.Partitions.Length;
    var set  = new HashSetClass(pmax);
    var list = new ListClass<PartitionClass>(pmax);
    foreach (var s in actions) {
      var i = s.S0.Partition;
      if (set.Add(i))
        list.Add(i);
      i = s.S1.Partition;
      if (set.Add(i))
        list.Add(i);
    }

    Canvas(ExtentWidth) {
      HAlign: HAligns.Center;
      Results.Data.Rule.ShowBlockLegend(list.Values, 11 pts);
    }
  };

  ShowChart(AlignActionClass[] actions) = Chart(100%, 4 inches) {
    Type: ChartTypes.Column;
    TextHeight: 12 pts;
    ValueLabel: HBox {
      Transform: Rotate(90 degrees);
      TransformFit: true;
      Lang.RateChange;
    };

    var fs = 200.0 / actions.Length;
    XAxis: ChartAxis {
      Rotation: 30 degrees;
      (each actions).ShowBox(fs);
    };

    ChartSeries(Colors.Green) {
      Label: Tex.rightarrow;
      foreach (var a in actions)
        new DataPointClass(each0, a.Rate) {Reference: a};
    };
  };

  Extrema(number, top) = VBox {
    var actions = SortedActions.Slice(top ? 0..<number : (SortedActions.Length - number)..<SortedActions.Length);
    ShowChart(actions);
    Separation: 20 pts;
    ShowLegend(actions);
  };


  MinusLog(text) = Span {
    Tex.Minus; "Log" sub 10; "("; text; ")";
  };

  LogRate(r) {
    if (r < 0)
      return Math.Log(-r, 10);
    else
      return -Math.Log(r, 10);
  }

  ShowAllRates = VBox {
    Chart(100%, ExtentHeight - 48 pts) {
      Type: ChartTypes.Scatter;
      TextHeight: 12 pts;

      ValueLabel: HBox {
        Transform: Rotate(90 degrees);
        TransformFit: true;
        MinusLog(Lang.RateChange);
      };

      XAxis: ChartAxis {
        Rotation: 90 degrees;
        TextHeight: 7 pts;
        foreach (var sa in Results.Rule.Segments) {
          var p = Results.Rule.Partitions[sa.PartitionIndex];
          HBox(15 pts) {
            HAlign: HAligns.Center;
            Background: p.Color;
            TextColor: p.TextColor;
            sa.Segment.Ipa;
          }
        }
      };

      var special = Markers.Circle(Colors.Red);

      ChartSeries {
        Marker: Markers.Dot;

        foreach (var si in Results.Rule.Segments) {
          var i = each0;

          foreach (var sj in Results.Rule.Segments) {
            if (si.Index != sj.Index) {
              var a = ActionMatrix.GetValue(si.Index, sj.Index);
              var y = LogRate(a.Rate);

              new DataPointClass(i, y) {
                Reference: a;
                Fill: a.S1.Partition.Color;
              };
            }
          }
        }
      };
    };

    Separation: 20 pts;
    Canvas(ExtentWidth) {
      HAlign: HAligns.Center;
      Results.Data.Rule.ShowBlockLegend(Results.Rule.Partitions, 10 pts);
    }
  };

  ShowSortedRates = VBox {
    Chart(100%, ExtentHeight - 48 pts) {
      Type: ChartTypes.Scatter;
      TextHeight: 12 pts;

      XLabel: MinusLog(Lang.RateChange);

      ValueLabel: HBox {
        Transform: Rotate(90 degrees);
        TransformFit: true;
        MinusLog("Reverse Rate");
      };

      var group   = Markers.TriangleUp(Colors.Green) {TextHeight: 12 pts};
      var special = Markers.Square(Colors.Red) {TextHeight: 15 pts};

      ChartSeries {
        Marker: Markers.Dot;

        foreach (var si in Results.Rule.Segments) {
          foreach (var sj in Results.Rule.Segments) {
            if (si.Index < sj.Index) {
              var a = ActionMatrix.GetValue(si.Index, sj.Index);
              new DataPointClass(LogRate(a.Rate), LogRate(a.Reverse)) {
                Reference: a;
                if (a.S0.Segment.Ipa == "p")
                  Marker: a.S1.Segment.Ipa == "b" or a.S1.Segment.Ipa == "f" ? special : group;
                else
                  Marker: a.S1.Partition.Marker;
              };
            }
          }
        }
      };
    };

    Separation: 20 pts;
    Canvas(ExtentWidth) {
      HAlign: HAligns.Center;
      Results.Data.Rule.ShowBlockLegend(Results.Rule.Partitions, 10 pts);
    }
  };

  ShowChartPairs(top, subset) = VBox {
    var actions = subset.Slice(0..<top);

    ShowChart(actions) {
      Type: ChartTypes.StackedColumn;

      Legend: ChartLegend {
        Vertical: true;
        Placement: Placements.Right;
      };
      ChartSeries(Colors.Red) {
