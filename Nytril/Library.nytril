class LanguageClass: FactClass {
  field string Name;
  field int    Cases;
  int          LangIndex;
  var          MapAttribution;

  Constructor(id, name, cases=0) {
    super.Constructor(id);
    Name  = name;
    Cases = cases;
  }

  override IconClass GetIcon = Icons.language;

  virtual Description = null;
  virtual Details = null;

  override GetLayoutSpan = Span {
    TipAction: this;
    Name;
  };

  virtual MapImage(SizeClass size) = null;

  override GetLayoutTip = Block {
    Paragraph {
      Bold;
      TextHeight: 14 pts;
      Name;
    };
    Description;

    ShowMap(new(4 inches, 2 inches));
  };

  static ImageClass LoadImage(name) = new ImageClass(Info.ImageFolder FileName(name));

  ShowMap(SizeClass size) {
    var h     = 6 pts;
    var image = MapImage(new(size.Width, size.Height - h*2));
    if (image is valid) {
      return HBox {
        HAlign: HAligns.Center;

        VBox {
          image;

          if (MapAttribution is valid) {
            Frame(size.Width) {
              TextHeight: h;
              TextColor: 80%;
              Lang.Credit;
              MapAttribution;
            }
          }
        }
      };
    }
    else
      return null;
  }
}

