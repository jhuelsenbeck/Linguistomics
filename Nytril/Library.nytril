class DataSetClass {
  LanguageClass[]             LanguageSet;
  SegPartClass[]              UniqueSegments;
  CognateClass[]              UsedCognates,
                              SortedCognates;
  ConceptClass[]              UsedConcepts;
  TaxonClass[]                Taxa;
  DictionaryClass<TaxonClass> TaxonSet;
  VectorClass                 WordList;
  RuleClass                   Rule;
  WordClass                   DefWord;
  TreeSetClass[]              TreeSets;
  ListClass                   PlainBuffer,
                              TextBuffer;
  ListClass<SegPartClass>     SegmentBuffer;
  RunExperimentClass          MainRun;
  var                         WordCutoff,
                              RootFolder,
                              Name,
                              MaxLanguageName,
                              WordCount,
                              SegmentCount,
                              ExampleConcept,
                              FigureConcept,
                              WordFile,
                              DataConcept;

  Constructor(config, name, rootfolder, runindex) {
    Name            = name;
    RootFolder      = Folder(rootfolder);
    WordFile        = RootFolder Info.WordFileName;
    WordCount       = 0;
    SegmentCount    = 0;
    MaxLanguageName = 0;
    TextBuffer      = new(64);
    PlainBuffer     = new(64);
    SegmentBuffer   = new(64);
    Rule            = new NaturalPartitionClass;
    TreeSets        = AddTree(config, each PriorTrees);
    MainRun         = TreeSets[0].Custom.Run[runindex];

    if (config is null)
      ReadExperiment;
  }

  TreeSetClass AddTree(config, NodeClass root) = new(config, "Tree"+each1, RootFolder, root, Rule);

  void ReadRawWords(concepts, includewords, LanguageClass[] languageset, cutoff=-1) {
    if (cutoff < 0)
      cutoff = languageset.Length;
    WordCutoff = cutoff;

    AddLanguageSet(languageset);

    var cognatelist = new ListClass<CognateClass>(1024);
    var conceptlist = new ListClass<ConceptClass>(256);

    foreach (var conceptvar in concepts) {
      var good = exists conceptvar.?Confidence and
                 exists conceptvar.?WordType and
                 exists conceptvar.?WordGroup;
      System.Assert(good, "Improper concept", conceptvar);

      if (good and conceptvar.Confidence > 0 and conceptvar.WordGroup.HasFlag(includewords)) {
        foreach (var cognate in conceptvar) {
          var vname = cognate.GetVariable.Name;
          var inc   = true;

          switch (vname) {
            case "Confidence":
            case "WordType":
            case "WordGroup":
              inc = false;
              break;
          }

          if (inc) {
            var count = 0;
            foreach (var word in cognate) {
              if (word is valid) {
                var taxon = TaxonSet.FindKey(word.GetVariable.Name);
                if (taxon is valid)
                  ++count;
              }
            }

            if (count >= cutoff) {
              var concept = new ConceptClass(conceptvar);
              concept.Check;
              conceptlist.Add(concept);
              cognatelist.Add(new(concept, cognate));
            }
          }
        }
      }
    }


    UsedConcepts = conceptlist.Values.Sort(false);
    UsedCognates = cognatelist.Values;

    var lookup = new SegPartDictionary(IPASegments.Length);
    foreach (var segment in IPASegments) {
      if (segment.Ipa is valid)
        lookup.Add(new(segment), segment.Ipa);
    }

    foreach (var cognate in UsedCognates)
      ComputeRawCognate(lookup, cognate);

    var set = new SegmentSetClass(512);
    foreach (var cognate in UsedCognates) {
      foreach (var word in cognate.Words) {
        foreach (var segment in word.Segments) {
          if (!segment.Punctuation)
            set.Add(segment);
        }
      }
    }
    UniqueSegments = set.Values;

    GetConceptExamples(concepts);
    CompletedRead;
  }

  void ReadExperiment {
    var run = ReadScript(Info.ExperimentRoot WordFile).Root;

    WordCutoff  = run.Info.WordCutoff;
    AddLanguageSet(run.LanguageSet);

    var slist  = new ListClass<SegPartClass>(run.Segments.Length);
    var lookup = new SegmentDictionary(IPASegments.Length);
    foreach (var segment in IPASegments) {
      if (segment.Ipa is valid)
        lookup.Add(segment, segment.Ipa);
    }

    foreach (var text in run.Segments) {
      var s = lookup.FindKey(text);
      if (s is valid)
        slist.Add(new(s));
      else
        System.Assert(false, "Missing Segment " + text);
    }

    UniqueSegments = slist.Values;

    var concepts    = run.Concepts;
    var conceptlist = new ListClass<ConceptClass>(concepts.Length);
    var cognatelist = new ListClass<CognateClass>(concepts.Length * 2);

    foreach (var conceptvar in concepts) {
      var concept = new ConceptClass(conceptvar);
      conceptlist.Add(concept);

      foreach (var cognatevar in conceptvar) {
        var cognate = new CognateClass(concept, cognatevar);
        cognatelist.Add(cognate);
        ComputeExperimentCognate(concept, cognate, cognatevar);
      }
    }

    UsedConcepts = conceptlist.Values;
    UsedCognates = cognatelist.Values;

    GetConceptExamples(concepts);
    CompletedRead;
  }

  void AddLanguageSet(languageset) {
    LanguageSet = languageset;
    TaxonSet    = new(LanguageSet.Length);

    ListClass<TaxonClass> tlist = new(LanguageSet.Length);

    foreach (var l in LanguageSet) {
      l.LangIndex = each0;

      var taxon = new TaxonClass(l);
      tlist.Add(taxon);
      TaxonSet.Add(taxon, taxon.Variable);
      if (taxon.Variable.Length > MaxLanguageName)
        MaxLanguageName = taxon.Variable.Length;
    }
    Taxa     = tlist.Values;
    WordList = new(Taxa.Length, null);
    DefWord  = new WordClass(#71f32657-a37c-4f1d-abba-87b928e9d80b#, Empty, Taxa[0], null);
    DefWord.Init;
  }

  virtual void GetConceptExamples(concepts) {
    ExampleConcept = concepts.Stone;
    FigureConcept  = concepts.What;
    DataConcept    = concepts.Mountain;
  }

  void CompletedRead {
    var factor = 1.0 / SegmentCount;
    foreach (var segment in UniqueSegments) {
      segment.Index         = each0;
      segment.UsedFrequency = factor * segment.UsedCount;
    }

    Rule.Init(UniqueSegments);
  }

  Coverage(TaxonClass taxon) {
    var index = taxon.Index;
    var count = 0.0;
    var used  = 0.0;
    foreach (var c in UsedCognates) {
      var word = c.Words[index];
      if (word is valid and word.Text is valid)
        ++used;

      ++count;
    }
    return used / count;
  }

  CoverageByLanguages {
    var count = new VectorClass(Taxa.Length+1, 0.0);
    foreach (var c in UsedCognates) {
      var used = 0;
      foreach (var word in c.Words) {
        if (word is valid and word.Text is valid)
          ++used;
      }
      count.AddValue(used, 1.0);
    }
    return count;
  }

  CognateClass[] GetSortedCognates {
    SortedCognates ??= UsedCognates.Sort(false);
    return SortedCognates;
  }

  CognateClass GetCognate(concept) = UsedCognates.FindFirst(c => c.Concept.Variable == concept);

  LangNumber(LanguageClass language) = Languages.FindFirstIndex(language)+1;

  void ComputeRawCognate(SegPartDictionary lookup, CognateClass cognate) {
    WordList.SetAllValues(DefWord);
    var maxlength = 0;
    foreach (var text in cognate.Variable) {
      var taxon = TaxonSet.FindKey(text.GetVariable.Name);
      if (taxon is valid) {
        var word = new WordClass(text+cognate.Concept.Name+cognate.Name+taxon.Variable, text, taxon, cognate);
        word.InitRaw(text, lookup);
        maxlength = Math.Max(maxlength, word.Aligned.Length);

        int count = 0;
        foreach (var s in word.Segments) {
          if (s.Index >= 0)
            ++count;
        }

        SegmentCount       += count;
        taxon.SegmentCount += count;
        WordList.SetValue(taxon.Index, word);
      }
    }

    cognate.Words     = WordList.Values;
    cognate.MaxLength = maxlength;

    foreach (var word in cognate.Words) {
      var a = word.Aligned;
      if (a is valid) {
        if (a.Length < maxlength)
          word.Padded = a + [IPAParts.Gap] * (maxlength - a.Length);
        else
          word.Padded = a;
      }
      else
        word.Padded = a;
    }

    for (var i = 0; i < maxlength; ++i) {
      var count    = 0;
      var gapcount = 0;

      foreach (var word in cognate.Words) {
        if (word.Aligned is valid) {
          ++count;
          if (word.Padded[i] == IPAParts.Gap)
            ++gapcount;
        }
      }
      System.Assert(gapcount < count, "Column with all gaps", cognate.Variable);
    }
  }

  void ComputeExperimentCognate(ConceptClass concept, CognateClass cognate, cognatevar) {
    WordList.SetAllValues(DefWord);

    var maxlength = 0;


    foreach (var word in cognatevar) {
      if (word is valid) {
        var taxon = Taxa[each0];
        if (taxon is valid) {
          ++taxon.WordCount;
          ++WordCount;

          TextBuffer.Clear();
          PlainBuffer.Clear();
          SegmentBuffer.Clear();

          var gs    = IPAParts.Gap;
          var gap   = gs.Ipa[0];
          var count = 0;
          foreach (var index in word) {
            if (index < 0) {
              TextBuffer.Add(gap);
              SegmentBuffer.Add(gs);
            }
            else {
              var s = UniqueSegments[index];
              SegmentBuffer.Add(s);
              foreach (var c in s.Ipa) {
                TextBuffer.Add(c);
                PlainBuffer.Add(c);
              }
              ++s.UsedCount;
              ++count;
            }
          }

          SegmentCount       += count;
          taxon.SegmentCount += count;


          var text = TextBuffer.Values;
          var w    = new WordClass(text+cognate.Concept.Name+cognate.Name+taxon.Variable, text, taxon, cognate);
          w.InitExperiment(word, PlainBuffer.Values, SegmentBuffer.Values);
          if (w.Aligned.Length > maxlength)
            maxlength = w.Aligned.Length;
          WordList.SetValue(taxon.Index, w);
        }
      }
    }

    cognate.Words     = WordList.Values;
    cognate.MaxLength = maxlength;
  }

