class AlignedCountClass: CountBaseClass {
  Constructor(ResultsClass results) {
    super.Constructor;

    var data     = results.Experiment.Data;
    var segments = data.UniqueSegments;
    var length   = segments.Length;
    TMatrix = new MatrixClass(length, length, 0.0);
    var scale = new VectorClass(length, 0);

    foreach (var alignindex in results.Alignments) {
      foreach (var alignment in alignindex.Data) {
        var prob    = alignment.Prob;
        var words   = alignment.Alignments;
        var wlength = words.Length;
        if (wlength > 1) {
          var p0 = words[0];
          if (valid p0) {
            for (var j = 1; j < wlength; ++j) {
              var p1 = words[j];
              if (valid p1) {
                var ml = Min(p0.Length, p1.Length);
                for (var index = 0; index < ml; ++index) {
                  var s0 = p0[index];
                  var s1 = p1[index];
                  if (s0 != s1 and s0 >= 0 and s1 >= 0) {
                    TMatrix.AddValue(s0, s1, prob);
                    scale.AddValue(s0, 1);
                    scale.AddValue(s1, 1);
                  }
                }
              }
            }
          }
        }
      }
    }

    for (var i = 0; i < length; ++i) {
      var si = 1.0 / scale[i];
      for (var j = 0; j < length; ++j)
        TMatrix.MultValue(i, j, si);
    }

    Factor = 100.0 / TMatrix.FindMax;
  }

  override AddEntry(SegmentClass s0, SegmentClass s1) {
    var v = TMatrix.GetValue(s0.Index, s1.Index) * Factor;
    if (v >= 1.0) {
      return Canvas {
        TipAction: new AlignActionClass(s0, s1, v);
        HAlign: HAligns.Center;
        VAlign: VAligns.Center;

        var f = Integer(2.55 * (100.0 - v));
        Background: new ColorClass(255, f, f);
        Span {v; TextDigits: 0};
       };
     }
     return null;
  }
}

