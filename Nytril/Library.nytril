abstract class CountBaseClass {
  MatrixClass  TMatrix;
  var          Factor;
  var          VFlags;

  Constructor {
    VFlags = SegmentFeatures.Vowel | SegmentFeatures.Semivowel;
  }

  GetColor(SegmentClass s) = ChartColor(s.PartitionIndex);

  PartitionBox(RuleClass rule) = Paragraph {
    Style.SansSerif;

    var segments = rule.PartSegments;
    var grid     = 0.125 pts;
    var gcolor   = 65%;
    var border   = 0.5 pts;
    var size     = ExtentSize - border*2;
    var d        = size / (segments.Length+1);

    Canvas {
      TextHeight: Math.Min(d.Height * 0.7, d.Width * 0.6);
      Border: border;

      var y   = d.Height;
      foreach (var s0 in segments) {
        var x = d.Width;
        foreach (var s1 in segments) {
          if (s0.Index != s1.Index) {
            var entry = AddEntry(s0, s1);
            if (valid entry) {
              entry {
                X: x;
                Y: y;
                Size: d;
              };
            }
          }
          x += d.Width;
        }
        y += d.Height;
      }

      y = d.Height;
      var p = 0;
      foreach (var s in segments) {
        Canvas {
          Size: d;
          Background: GetColor(s);
          Width: d.Width;
          HAlign: HAligns.Center;
          Y: y;
          s.ShowSegment;
        };
        if (p != s.PartitionIndex) {
          Canvas {
            Y: y;
            Size: new SizeClass(size.Width, grid);
            Background: gcolor;
          };
          p = s.PartitionIndex;
        }
        y += d.Height;
      }

      Canvas {
        Height: d.Height;
        Width: size.Width;

        var x = d.Width;
        p = 0;
        foreach (var s in segments) {
          Canvas {
            Size: d;
            Background: GetColor(s);
            HAlign: HAligns.Center;
            X : x;
            s.ShowSegment;
          };
          if (p != s.PartitionIndex) {
            Canvas {
              X: x;
              Size: new SizeClass(grid, size.Height);
              Background: gcolor;
            };
            p = s.PartitionIndex;
          }
          x += d.Width;
        }
      };
    };
  };

  abstract AddEntry(SegmentClass s0, SegmentClass s1);
}

