class ResultsClass {
  ExperimentClass   Experiment;
  DataSetClass      Data;
  AlignIndexClass[] Alignments;
  StatClass[][]     TransitionStats;
  var               AlignmentCutoff,
                    EquilibriumFrequencies;

  Constructor(ExperimentClass experiment) {
    Experiment = experiment;
    Data       = experiment.Data;

    var results = IO.ReadScript(experiment.RootFolder Folder("Custom") Folder("Posterior") Folder("Run1") Info.ExecuteFolder FileName("Alignments") Extensions.Nytril).Root;
    TransitionStats        = results.TransitionStats;
    EquilibriumFrequencies = results.EquilibriumFrequencies;
    AlignmentCutoff        = results.AlignmentCutoff;
    Alignments             = results.Alignments;

    var alist = new ListClass<AlignIndexClass>(1024);
    foreach (var a in Alignments) {
      foreach (var c in Data.UsedCognates) {
        if (c.Concept.Name == a.ConceptName and c.Name == a.CognateName) {
          a.Cognate = c;
          alist.Add(a);
          break;
        }
      }
    }
    Alignments = alist.Values.Sort(false, ref CompareAlignment);
  }

  static CompareAlignment(AlignIndexClass a0, AlignIndexClass a1, options) {
    var c = a0.Data.Length.Compare(a1.Data.Length);
    if (c == 0)
      return a0.ConceptName.Compare(a1.ConceptName);
    return c;
  }
}
