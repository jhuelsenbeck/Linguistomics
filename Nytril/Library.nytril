class AlignPairClass {
  DataSetClass    Data;
  AlignIndexClass Align;
  SizeClass       BoxSize;
  var             Name;

  Constructor(DataSetClass data, AlignIndexClass align) {
    Data    = data;
    Align   = align;
    BoxSize = new SizeClass(14 pts, 14 pts);

    Name = align.ConceptName;
    if (align.CognateName != DefaultCognate)
      Name += "-" + align.CognateName;
  }

  Languages(data, height) = VBox {
    HAlign: HAligns.Right;
    Span {
      Empty;
    };

    foreach (var taxon in data.Taxa) {
      HBox {
        Height: height;
        VAlign: VAligns.Center;
        taxon.Language;
      };
    }
  };

  Show(prob, cumulative, set) = VBox {
    Margin: PadB(10 pts);
    Border: 0.125 {Color: 50%};
    HAlign: HAligns.Center;

    Span {
      TextDigits: 1;
      prob * 100.0;
      "%";
    };

    VBox {
      foreach (var taxon in Data.Taxa) {
        HBox {
          Height: BoxSize.Height;

          var word = set[each0];
          if (valid word) {
            foreach (var c in word) {
              Canvas {
                HAlign: HAligns.Center;
                Size: BoxSize;
                SegmentClass segment;
                if (c == -1)
                  segment = IPASegments.GapSegment;
                else if (c >= 0 and c < Data.UniqueSegments.Length) {
                  segment = Data.UniqueSegments[c];
                  Background: ChartColor(segment.PartitionIndex);
                }
                else
                  segment = IPASegments.MissingSegment;
                segment.ShowSegment;
              };
            }
          }
        };
      }
    };
  };

  override GetLayoutTip = ShowDetails(9, true, 10 pts);

  GetChart(SizeClass size, max) = Chart {
    Type: ChartTypes.Column;
    TextHeight: 6 pts;
    Size: size;
    ValueLabel: "%";
    ChartSeries {
      foreach (var a in Align.Data) {
        a.Prob * 100.0;
        if (each1 >= max)
          break;
      }
    };
  };

  ShowDetails(max, tip, textheight) = Block {
    TextHeight: textheight;

    Paragraph {
      KeepWithNext: true;
      TextHeight: textheight + 4 pts;
      SpaceAfter: 10 pts;

      TabStops: [3 inches];
      Name;
    };

    if (Align.Data.Length > 1)
      GetChart(new(3 inch, 0.75 inch), max);

    var langbox = Languages(Data, BoxSize.Height);
    var indent  = GetLayoutSize(langbox).Width;
    Paragraph {
      if (tip) {
        langbox;
        Space;
      }
      else {
        LeftIndent: indent;
        FirstIndent: -indent;
        Tab;
        langbox;
      }

      ShowBlocks(max);
    }
  };

  ShowBlocks(max) = Span {
    var cumulative = 0.0;
    foreach (var a in Align.Data) {
      var prob = a.Prob;
      cumulative += prob;
      var alignments = a.Alignments;
      if (alignments.Length > 0) {
        Show(prob, cumulative, alignments);
        Space;
        if (each1 >= max)
          break;
      }
    }
  };

  ShowFigureDetails(max) = Block {
    BoxSize = new(BoxSize.Width, 8 pts);
    TextHeight: 7 pts;
    Span {
      Languages(Data, BoxSize.Height);
      ShowBlocks(max);
    }
  };
}

