    Separation: 20 pts;
    ShowLegend(actions);
  };

  Pairs(top, predicate) = ShowChartPairs(top, SortedActions.FindSlice(predicate));

  override AddEntry(SegPartClass si, SegPartClass sj, x, y, SizeClass size) {
    var a = ActionMatrix.GetValue(si.Index, sj.Index);
