}

with Slides.ExampleTree {
  Title = "Example Tree";
  Body  = Style.ShowFigureSlide(Figures.ExampleTree);
}

with Slides.Alignment {
  Title = Lang.Alignment;
  Body  = Style.ShowFigureSlide(Figures.Alignment, TextHeight: 5 pts);
}

with Slides.ShowResults {
  Title = "Results";
