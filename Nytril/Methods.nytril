namespace Figures.SegmentPercentages {
  Title   = "Segment Occurance Rates";
  CBorder = 0.25 pts;


  Caption(ExperimentClass experiment) = Span {
    var l0 = experiment.Data.Taxa[0].Language;

    "Comparison of occurance rates of segments in each language. Segments are sorted by the rates in "; l0 ; ". Bars are normalized to the rate of the most frequently ocurring segment in each language. Languages are ordered by their Euclidian distance from "; l0; " indicated by the red line.";
  };

  LangCanvas(SegmentFrequencyClass compute, TaxonRateClass rate, width, height) = HBox {
    VAlign: VAligns.Bottom;
    Height: height;
    BorderB: CBorder;
    SegmentBar(compute, rate, each compute.SortedSegments, width, height - CBorder);
  };

  SegmentBar(SegmentFrequencyClass compute, TaxonRateClass rate, index, width, height) = Canvas {
    Size: new SizeClass(width-1, height * rate.SegmentFrequency[index] / rate.MaxFrequency);
    MarginR: 1;
    var s = compute.Data.UniqueSegments[index];
    Background: ChartColor(s.PartitionIndex);
    Hover: new HoverSegmentClass(rate, s, rate.SegmentCount[index]);
  };

  SegmentLabel(SegmentClass[] segments, index, width, height) = HBox {
    Width: width;
    Height: height;
    HAlign: HAligns.Center;
    segments[index].ShowSegment;
  };

  OccurranceChart(ExperimentClass experiment, SizeClass maxsize) = MatrixBlock {
    var data    = experiment.Data;
    var compute = new SegmentFrequencyClass(data);
    var lw      = 60 pts;
    var cw      = maxsize.Width - lw;
    var bw      = cw / data.UniqueCount;
    var bh      = bw * 1.5;
    var h       = (maxsize.Height - bh) / data.Taxa.Length;
    var r0      = compute.SortedRates[0];

    TextHeight: 12 pts;
    VAlign: VAligns.Bottom;
    foreach (var rate in compute.SortedRates) {
      Row {
        Cell {
          PaddingR: 3 pts;
          Frame {
            Width: lw;
            rate.Taxon.Language;
          };
          Canvas {
            Background: Colors.Red;
            var frac = rate.Distance / compute.MaxDistance;
            Size: new SizeClass(lw * frac, 2);
            Hover: new HoverClass(String("{0}% different from {1}"(frac*100.0 {TextDigits: 1}, r0.Taxon.Language)), HoverResponses.None);
          };
        };
        LangCanvas(compute, rate, bw, h);
      };
    }

    Row {
      Empty;
      TextHeight: 1.1 * bw;
      HBox {
        SegmentLabel(data.UniqueSegments, each compute.SortedSegments, bw, bh);
      };
    }
  };

  Body(ExperimentClass experiment, SizeClass maxsize) = Block {
    Paragraph {
      experiment.Rule.ShowLegend(10 pts, 1.1 inch) {Border: 0.25 {Color: 80%}; MarginR: 12 pts; Padding: 5};
      OccurranceChart(experiment, new SizeClass(maxsize.Width - 2 inches, maxsize.Height));
    }
  };
}
