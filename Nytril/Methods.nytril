    Columns: [1.5 inches, 1 inches];
    LanguageTitleRow {
      Lang.Language; Lang.WordForms;
    };

    foreach (var taxon in experiment.Data.Taxa) {
      Row {
        taxon.Language;
        taxon.Language.FindFacts(WordClass).Length;
      };
    }
  };
}

