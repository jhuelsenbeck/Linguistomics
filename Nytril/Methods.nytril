class HoverSegmentClass: HoverClass {
  TaxonRateClass Rate;
  SegmentClass   Segment;
  TaxonClass     Taxon;
  var            Count;

  Constructor(TaxonRateClass rate, SegmentClass segment, count) {
    super.Constructor(null, HoverResponses.RunQuery);
    Segment = segment;
    Taxon   = rate.Taxon;
    Count   = count;
  }

  override GetLayoutTip = VBox {
    HAlign: HAligns.Center;
    Lang.Occurrences(Count);
    Segment.GetLayoutTip;
  };

  override GetQuery = MatchAll WordClass {
    MatchAny LanguageClass {
      Taxon.Language;
    };
    MatchAny SegmentClass{
      Segment;
    };
  };
}

