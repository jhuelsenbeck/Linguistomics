namespace Figures.Alignment {
  ArrowWidth  = 40;
  ArrowMargin = 10 pts;
  Arrowhead   = 8 pts;
  ArrowColor  = 80%;

  HMap1 = [
    "00111110",
    "10001111",
    "10001110",
    "01101111",
    "10101010",
    "10101110",
    "10001111",
    "00001110",
    "10001110",
    "10011111",
  ];

  HMap2 = [
    "111110000",
    "000111100",
    "000111111",
    "000111111",
    "101010100",
    "000101111",
    "000101111",
    "000111000",
    "111100000",
    "000111111",
  ];

  TName(TaxonClass taxon) = Cell {
    Style.SansSerif;
    taxon.Language;
  };

  SegmentTable(ExperimentClass experiment, aligned) = MatrixBlock {
    TextHeight: 9 pts;

    foreach (var taxon in experiment.Data.Taxa) {
      Row {
        TName(taxon);
        Cell {
          IPAFamily;
          Span {
            var word = experiment.ExampleConcept.Cognate.Words[taxon.Index];
            var segs = aligned ? word.Padded : word.Segments;
            (each segs).ShowBlock;
          }
        };
      }
    }
  };

  AlignSegments(segments, map) = Span {
    IPAFamily;

    var i = 0;
    foreach (var c in map) {
      if (c == '1' and i < segments.Length)
        segments[i++].ShowBlock;
      else
        IPASegments.GapSegment.ShowBlock;
    }
  };

  MapTable(ExperimentClass experiment, map, text) = MatrixBlock {
    foreach (var taxon in experiment.Data.Taxa) {
      Row {
        TName(taxon);
        Cell {
          var t = map[each0];
          Span {
            if (text)
              AlignSegments(experiment.ExampleConcept.Cognate.Words[taxon.Index].Segments, t);
            else {
              Style.MonoFamily;
              t;
            }
          }
        };
      }
    }
  };

  LabelBox(label) = HBox {
    TextHeight: 18 pts;
    Bold;
    Equation {label};
  };

  ContentBox(content) = HBox {
    MarginL: 4 pts;
    Border: 1 {Color: ArrowColor};
    Padding: 2 pts;
    content;
  };

  ArrowFigure(size) = Canvas {
    Size: size;
    Figure {
      Stroke: 1.5 {Color: ArrowColor};
      FigurePath {
        MoveTo(0, 0);
        QuadTo(new(size.Width*0.92, size.Height*0.4), new(size.Width - Arrowhead*0.5, size.Height - Arrowhead));
      };
    };
    Figure {
      Fill: ArrowColor;
      FigurePath {
        Closed: true;
        MoveTo(size.Width - Arrowhead, size.Height - Arrowhead);
        LineTo(size.Width, size.Height - Arrowhead);
        LineTo(size.Width - Arrowhead * 0.5, size.Height);
      };
    };
    Canvas {
      Background: Colors.White;
      Position: new PointClass(size.Width * 0.3, (size.Height - 25 pts) * 0.5);
      TextHeight: 20 pts;
      TextColor: ArrowColor;
      Bold;
      Plus;
    };
  };

  CFigure(c) = Figure {
    Fill: ArrowColor;
    Padding: 1;
    c;
  };

  NumBox(num, c1, c2) = MatrixBlock {
    VAlign: VAligns.Top;
    HAlign: HAligns.Center;
    ColumnGap: 0;
    Row {
      LabelBox(HomologyMap sub num);
      ContentBox(c1);
    };
    Row {
      Empty;
      VBox {
        MarginTB: 6 pts;
        TextHeight: 20 pts;
        HAlign: HAligns.Center;
        CFigure('=');
        CFigure(Tex.downarrow);
      }
    };
    Row {
      LabelBox(SegmentalAlignment sub num);
      ContentBox(c2);
    };
  };

  HomBox(ExperimentClass experiment, i, map) = NumBox(i, MapTable(experiment, map, false), MapTable(experiment, map, true));

  Caption(ExperimentClass experiment) = Span {
    "Alignments ";
    InParens {SegmentalAlignment};
    " are formed from the observed segments ";
    InParens {SegmentalInfo};
    " and a homology map ";
    InParens {HomologyMap}; eos;
  };

  Body(ExperimentClass experiment, SizeClass maxsize) = VBox {
    Margin: 5 pts;
    HAlign: HAligns.Center;
    HBox {
      MarginB: 4 pts;
      VAlign: VAligns.Bottom;
      var size = new SizeClass(ArrowWidth, experiment.Data.Taxa.Length * 8 pts);

      ArrowFigure(size) {
        Transform: Affine(-1, 0, 0, 1, size.Width, 0);
      };
      HBox {
        VAlign: VAligns.Top;
        LabelBox(SegmentalInfo);
        ContentBox(SegmentTable(experiment, false)) {MarginB: ArrowMargin; MarginR: ArrowMargin};
      };
      ArrowFigure(size);
    };
    HBox {
      HomBox(experiment, 1, HMap1);
      Canvas {Width: 0.25 inches};
      HomBox(experiment, 2, HMap2);
    }
  };
}
