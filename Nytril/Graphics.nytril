class EquationClass: FactClass {
  field string Name;
  var          Formula;

  Constructor(id, name) {
    super.Constructor(id);
    Name = name;
  }

  override IconClass GetIcon = Icons.functions;

  override GetLayoutSpan = Formula {
    Link to this;
  };

  override GetLayoutBlock = PaperStyle.EquationPar {
    Formula;
    Link to this;
  };

  override GetLayoutTip = Block {
    Paragraph {
      PaperStyle.SansSerif;
      SpaceAfter: 10 pts;
      Bold;
      Name;
    };
    Paragraph {
      LeftIndent: 24 pts;
      TextStacked: true;
      Formula;
    }
  };

  override GetLayoutFact = GetLayoutTip;
}

