class TreeContentClass: ContentClass {
  var NodeClass Root;
  var           Width,
                Axis;

  Constructor(title, width, NodeClass root, axis=null) {
    super.Constructor(title);
    Root  = root;
    Width = width;
    Axis  = axis;
  }

  override GetBody(ContentStyleClass style) = Paragraph {
    PaperStyle.ShowTree(style, Root, Width, null, Axis);
  };
}

