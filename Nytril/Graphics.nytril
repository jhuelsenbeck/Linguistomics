class DefClass: FactClass {
  field string Name,
               Description;
  var          Variable;

  Constructor(id, symbol, name, description=null) {
    super.Constructor(id);

    Variable    = symbol;
    Name        = name;
    Description = description;
  }

  override IconClass GetIcon = Icons.subscript;

  override int Compare(d) = Name.Compare(d.Name);

  override GetLayoutSpan = Span {
    Variable;
    TipAction: this;
    Link to this;
  };

  override GetLayoutFact = GetLayoutTip;

  override GetLayoutTip = Block {
    Paragraph {
      TextFamily: TextFamilies.TimesNewRoman;
      TextEquation: true;
      TextHeight: 20 pts;
      Variable;
    };
    Paragraph {
      TextHeight: 16 pts;
      Bold; Name;
    };
    Paragraph {
      TextHeight: 14 pts;
      Description;
    };
  };

  Appendix = Block {
    Paragraph {
      TextHeight: 16 pts;
      Variable;
      Tab;
      Name;
    };
    if (Description is valid) {
      Paragraph {
        LeftIndent: 0.5 inches;
        SpaceAfter: 6 pts;
        Description;
      };
    }
  };
}

