  ShowAuthor(PersonClass person) = Span {
    Link to person;
    CitationLib.GetFullName(person) {
      Bold;
      TipAction: person.FindFirstFact(WebsiteLink);
    };

    Span {
      Separator: Comma;
      TextAlignment: TextAlignments.Superscript;
      each1;
      "+";
    };
