class ViewTileClass: DocTileClass {
  Constructor(DocumentClass document, icon) {
    super.Constructor(document, icon);
  }

  override GetTileBox = super.GetTileBox {
    BorderRadius: 5 pts;
  };
}

//===============================================================

class HomePageClass: SitePageClass {
  Constructor {
    super.Constructor(Main.Site, #29f0a41f-f0f2-4830-bcaa-70418aa20157#, "Home", "Linguistics Research Project");

    Tiles = [
      new ViewTileClass(Main.Documents.Paper, Icons.article),
      new ViewTileClass(Main.Documents.Supplemental, Icons.add_circle),
      new ViewTileClass(Main.Documents.DavidPresentation, Icons.slideshow),
      new ViewTileClass(Main.Documents.JohnPresentation, Icons.slideshow),
    ];
  }

  override GetHeader = Block {
    Paragraph {
      TextHeight: 20 pts;
      SpaceAfter: 20 pts;
      Info.Title;
    };

    MainContentStyle.ShowAuthorList(Main.Documents.Paper.Authors.Values);
    Paragraph {
      SpaceAfter: 20 pts;
    };
  };
}

