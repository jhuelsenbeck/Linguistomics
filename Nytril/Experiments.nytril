class LangNodeClass: NodeClass {
  var Probability;

  Constructor {
    super.Constructor;
  }

  override void ResolveData {
    if (Probability is valid and HasChildren) {
      Label = Span {
        TextColor: Colors.LightGray;
        TextHeight: 8 pts;
        TextDigits: 0;
        Probability * 100.0;
      };
    }
    else if (Name is valid)
      Label = WorldLanguages.FindChildValue(Name);
  }
}

