ShowItem(ShowClass show, variable) {
   var text = variable.?Text;
   if (valid text) {
     return Block {
       Style.ItemTextFormat;
       text;
     };
   }
   else {
     return Block {
       Style.MainStyle;
       variable.?Body(show.Experiment);
     };
   }
}

