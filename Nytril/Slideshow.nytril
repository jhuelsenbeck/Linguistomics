class SlideItemClass {
  var Width,
      Height,
      Content,
      Numbered,
      Number;

   Constructor(ShowClass show, variable, number, width) {
     Width    = width;
     Number   = number;
     Numbered = variable.?Numbered ?? 0;

     var size = Extent.Size;
     PushExtent(new(width, size.Height));
     Content = Frame {
       Width: size.Width;
       ShowItem(show, variable);
     };
     Height = LayoutSize(Content).Height;
     PopExtent;
   }
}

