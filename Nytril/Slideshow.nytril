class SingleSlideClass: SlideClass {
  var Variable;

  Constructor(variable, footer) {
    super.Constructor(variable.Title, footer);
    Variable = variable;
  }

  override ShowBody(ShowClass show) {
    return ShowItem(show, Variable);
  }
}

