class EndSlideClass: SlideClass {
  Constructor(SlideStyleClass style) {
    super.Constructor(Lang.Questions, AllTypes, style);
  }

  override Body(PresentationClass presentation) = Block {
    Paragraph {
      var h = 150 pts;
      ParAlignment: ParAlignments.Center;
      SpaceBefore: (DocMetrics.SlideContent.Height - h) * 0.5;
      Figure {
        TextHeight: h;
        Fill: (Style.LightColor..Style.DarkColor) {Vertical: true};
        "?";
      }
    };
  };
}

