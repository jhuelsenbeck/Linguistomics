class FigureSlideClass: SlideClass {
  var Variable,
      Figure;

  Constructor(ShowClass show, variable, figure) {
    super.Constructor(variable.?Title ?? figure.?Title, Space);
    Variable = variable;
    Figure   = figure;
  }

  override AddSlidePage(ShowClass show, title, footer) = Block {
    show.Design.HeaderFooter(show, this, title, footer);

    var size   = Extent.Size;
    var height = size.Height;

    if (exists Figure.?Caption or exists Figure.?Title) {
      var caption = Frame {
        PaddingB: 10 pts;
        TextHeight: 16 pts;
        Figure.?Caption(show.Experiment);
      };
      caption;
      height -= LayoutSize(caption).Height;
    }

    Paragraph {
      ParAlignment: ParAlignments.Center;
      Frame {
        Height: height;

        PushExtent(new(size.Width, height));
        Figure.Body(show.Experiment) {
          Variable.?Format;
        };
        PopExtent;
      };
    };
    show.PageIndex++;
  };
}

