class VarSlideClass: SlideClass {
  var Variable;

  Constructor(PresentationClass presentation, variable) {
    super.Constructor(variable.Title, variable.Type, presentation.SlideStyle);
    Variable = variable;
  }

  override Body(PresentationClass presentation) = Block {
    Variable.Body(presentation);
  };
}

