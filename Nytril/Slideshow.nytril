class ShowDesignClass {
  var         HeaderHeight,
              FooterHeight,
              SideGap,
              HeaderGap,
              FooterGap,
              BulletIndent,
              Bullet,
              BulletSize,
              BulletDone,
              BulletCurrent,
              ItemIndent,
              TotalIndent,
              ItemSpacer;

  Constructor {
    HeaderHeight  = 56 pts;
    HeaderGap     = 6 pts;
    FooterHeight  = 32 pts;
    FooterGap     = 24 pts;
    SideGap       = 0.5 inches;
    ItemSpacer    = 10 pts;
    BulletIndent  = 36 pts;
    ItemIndent    = 0;//1 inch;
    TotalIndent   = ItemIndent + BulletIndent;
    Bullet        = Tex.blacksquare;
    BulletDone    = Icons.check;
    BulletCurrent = Tex.blackcirc;
  }

  virtual HeaderFooter(ShowClass show, SlideClass slide, title, footer) = Block {
    Paragraph {
      PageBreakBefore: true;
    };
  };

  FixedFrame(x, y, width, height) = Frame {
    HRelative: HRelatives.Page;
    VRelative: VRelatives.Page;
    Wrapping: Wrappings.BehindText;
    X: x;
    Y: y;
    Width: width;
    Height: height;
  };

  virtual TitlePage(title, color) = Paragraph {
    var h = 40 pts;
    FixedFrame(0, (Extent.Page.Height - h) * 0.5, Extent.Page.Width, h) {
      Paragraph {
        ParAlignment:ParAlignments.Center;
        Style.MainFamily;
        TextColor: color;
        TextHeight: h;
        title;
      }
    }
  };
}

