class NaturalPartitionClass: RuleClass {
  Constructor(SegmentClass[] segments) {
    super.Constructor("Natural Class");
    Numbers = true;

    new FeatureMaskClass(segments, this, "Long Vowel", Vowel LongVowel, Vowel LongVowel);
    new FeatureMaskClass(segments, this, "Nasal Vowel", Vowel Nasal, Vowel Nasal);
    new FeatureMaskClass(segments, this, "Diphthong", Diphthong, Diphthong);
    new FeatureMaskClass(segments, this, "Short Vowel", Vowel, Vowel);
    new FeatureMaskClass(segments, this, "Nasal Consonant", Nasal, Nasal);
    new FeatureMaskClass(segments, this, "Liquid", Vowel Liquid, Liquid);
    new FeatureMaskClass(segments, this, "Approximant", Vowel Approximant, Approximant);
    new FeatureMaskClass(segments, this, "Affricate", Vowel Affricate, Affricate);
    new FeatureMaskClass(segments, this, "Fricatives", Vowel Fricative, Fricative);
    new FeatureMaskClass(segments, this, "Stops", Vowel, NoFeature);
    GetFilters(segments);
    AssignPartitions(segments);
  }
}
