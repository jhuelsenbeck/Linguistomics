class PartitionClass: FactClass {
  field          Name;
  SegmentClass[] Segments;
  var            Index,
                 Center,
                 Radius,
                 Angle,
                 Outer;
  FilterClass    Filter;

  Constructor(index, FilterClass filter, SegmentClass[] segments) {
    super.Constructor(filter.Name);
    Name     = filter.Name;
