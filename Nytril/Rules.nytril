class SingleFilterClass: FilterClass {
  SegmentClass Segment;

  Constructor(SegmentClass[] segments, RuleClass rule, SegmentClass segment) {
    super.Constructor(segments, rule, segment.Ipa);
    Segment = segment;
  }

  override Matches(SegmentClass segment) = segment == Segment;
}
