class SegmentListClass: FilterClass {
  SegmentClass[] List;

  Constructor(SegmentClass[] segments, RuleClass rule, name, SegmentClass[] list) {
    super.Constructor(segments, rule, name);
    List = list;
  }

  override Matches(SegmentClass segment) = List.FindAny(segment);
}
