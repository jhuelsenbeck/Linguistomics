class PartitionClass: FactClass {
  field          Name;
  SegmentClass[] Segments;
  PointClass     Center;
  ColorClass     Color,
                 TextColor;
  var            Index,
                 Radius,
                 Angle,
                 Outer;

  Constructor(index, name, SegmentClass[] segments) {
    super.Constructor(name);
    Name      = name;
    Color     = ChartColor(index);
    TextColor = Color.TextCompliment;
    Index     = index;
    Segments  = segments;

    foreach (var s in segments)
      s.SetPartition(this, index);

    Link.Connect(this, segments);
  }

  override IconClass GetIcon = Icons.sort;

  ShowFilterSegments(align) = Frame(DocMetrics.SegmentWidth) {
    Paragraph {
      ParAlignment: align;
      TextHeight: 18 pts;
      Separator: Space;
      (each Segments).ShowSegment;
    }
  };

  override GetLayoutTip = Frame(DocMetrics.SegmentWidth) {
    Paragraph {
      ParAlignment: ParAlignments.Center;
      TextHeight: 16 pts;
      Border: BorderB(1);
      Name;
    };
    ShowFilterSegments(ParAlignments.Left);
  };

  override GetLayoutSpan = Span {
    TipAction: this;
    Name;
  };
}
