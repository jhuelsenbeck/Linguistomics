class AlignActionClass: ActionClass {
  ResultsClass Results;
  SegmentClass S0,
               S1;
  var          Rate,
               Reverse,
               Percent,
               Symmetric;

  Constructor(ResultsClass results, SegmentClass s0, SegmentClass s1, rate, reverse, symmetric) {
    super.Constructor(Actions.TipDocument, s0);
    Results   = results;
    S0        = s0;
    S1        = s1;
    Rate      = rate * 100.0;
    Reverse   = reverse * 100.0;
    Symmetric = symmetric;
  }

  override Compare(c, options) = Rate.Compare(c.Rate);

  ShowPartition(SegmentClass s, textheight) = Canvas(textheight * 2.5) {
    BorderRadius: Style.BorderSize;
    HAlign: HAligns.Center;
    Background: s.Partition.Color;
    TextColor: s.Partition.TextColor;
    s.ShowSegment;
  };

  ShowBox(textheight) = HBox {
    TextHeight: textheight;
    VAlign: VAligns.Center;
    ShowPartition(S0, textheight);
    Space;
    Span {
      TipAction: this;
      Symmetric ? Tex.leftrightarrow : Tex.rightarrow;
    };
    Space;
    ShowPartition(S1, textheight);
    Tip: this;
  };

  override GetLayoutSpan = ShowBox(11 pts);

  GetExamples(range) = Block {
    TextHeight: 14 pts;
    GetLayoutSpan;
    Paragraph {
      TextDigits: 2;
      Rate;
      "% ";
      Span {
        "(";
        TextDigits: 1;
        Percent;
        "% of max)";
      };
    };

    var sorted = GetList().Slice(range);
    if (valid sorted) {
      Paragraph {
        SpaceBefore: 6 pts;
        "Examples:";
      };

      Paragraph {
        Separator: Space;
        foreach (var s in sorted)
          new AlignPairClass(Results.Data, s.Congate).ShowFigureData(s.Congate, s.Data);
      };
    }
  };

  override GetLayoutTip = GetExamples(0..<10);

  override GetDocument = GetExamples(0..);

  static CompareProb(AlignSortClass s1, AlignSortClass s2, options) = s1.Data.Prob.Compare(s2.Data.Prob);

  AlignSortClass[] GetList {
    // Find cognate sets that have the first segment in one language and the second in another language

    var i0   = S0.Index;
    var i1   = S1.Index;
    var list = new ListClass<AlignSortClass>(1024);

    foreach (var cognate in Results.Alignments) {
      AlignDataClass found = null;

      foreach (var alignment in cognate.Alignments) {
        foreach (var w1 in alignment.WordSet) {
          foreach (var seg in w1) {
            if (seg == i0) {
              var ni = each0;
              foreach (var w2 in alignment.WordSet) {
                if (w2[ni] == i1) {
                  found = alignment;
                  break;
                }
              }
            }
            if (valid found)
              break;
          }
          if (valid found)
            break;
        }
        if (valid found)
          break;
      }

      if (valid found)
        list.Add(new(found, cognate));
    }
    return list.Sort(true, ref CompareProb);
  }
}
