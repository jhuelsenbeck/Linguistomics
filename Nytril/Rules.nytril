class VowelListClass: SegmentListClass {
  Constructor(SegmentClass[] segments, RuleClass rule, SegmentClass[] list) {
    super.Constructor(segments, rule, list.FirstElement.Ipa, list);
  }

  override Matches(SegmentClass segment) = List.FindAny(segment);
}
