class TransitionClass {
  var         MaxRate,
              MaxFrequency;
  MatrixClass Rates;
  RuleClass   Rule;

  Constructor(ResultsClass results, RuleClass rule) {
    Rule = rule;
    var stats = results.TransitionStats;

    var length = stats.Length;
    Rates = new(length, length, null);

    var max = 0.0;
    foreach (var r in stats) {
      var i = each0;
      foreach (var c in r) {
        var f = c?.Upper ?? 0.0;
        if (f > max)
          max = f;
        Rates.SetValue(i, each0, c);
      }
    }
    MaxRate      = max;
    MaxFrequency = 1.0;
  }
}
