class FilterClass {
  field          Name;
  SegmentClass[] Segments;
  RuleClass      Rule;

  Constructor(SegmentClass[] segments, RuleClass rule, name) {
    Segments = segments;
    Rule     = rule;
    Name     = name;
  }

  virtual Matches(SegmentClass segment) = true;

  override GetLayoutSpan = Span {
    TipAction: this;
    Name;
  };
}
